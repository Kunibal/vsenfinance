<div class="container my-5">
  <div class="row">
    <div class="col-10 mb-4">
      <h3 class="mb-3">お問い合せ</h3>
        <%= form_with model: @contact, class: 'flex' do |f| %>
          <div class="col-md-6 flex flex-column">
            <div>
              <%= f.text_field  :name, required: true, placeholder: 'お名前', class: "contact-form-text-area me-2" %>

              <%= f.text_field :email, required: true, placeholder: 'メールアドレス', class: "contact-form-text-area ms-2" %>
            </div>

            <%= f.text_area :message, rows: 8, cols: 40, required: true, class: "contact-form-text-area",
                  placeholder: "内容をこちらに記入してください。" %>

            <div>
            <%= f.submit '送信', class: 'btn-grad px-4' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>