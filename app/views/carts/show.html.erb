<h2>Cart show</h2>
<ul>
  <% @cart.order_items.each do |order_item| %>
    <li>商品: <%= order_item.item.name %>/ 税込価格: <%= order_item.item.add_tax %>/ 個数: <%= order_item.quantity %>/ 小計：<%= order_item.subtotal.to_s(:delimited) %>
    <ul>
      <li>
        <%= link_to "Add one", order_item_add_path(:id => order_item), method: :post %>
        <%= link_to "Reduce one", order_item_reduce_path(:id => order_item), method: :post %>
      </li>
      <li>
        <%= link_to "Remove item", order_item_path(order_item), method: :delete %>
      </li>
    </ul>
  <% end %>
</ul>
<h3>合計: <%= @cart.total_price.to_s(:delimited) %></h3>
<% if @cart.order_items.exists? %>
  <%= link_to "Proceed to checkout", new_order_path %>
<% end %>
<%= link_to "Empty cart", cart_path(@current_cart), method: :delete, data: {confirm: "Are you sure?"} %>