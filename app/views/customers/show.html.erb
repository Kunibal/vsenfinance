<div class="flex">
  <div class="flex flex-column ms-auto my-4">
    <div class="fontweight-700 mt-4">お名前</div>
    <% if !current_customer %>
      <div class="fontweight-700">フリガナ</div>
    <% end %>
    <div class="fontweight-700">郵便番号</div>
    <div class="fontweight-700">ご住所</div>
  </div>
  <div class="flex flex-column me-auto my-4">
    <div class="border-bottom mt-4">
      <%= @customer.last_name %>
      <%= @customer.first_name %>
    </div>
      <% if !current_customer %>
    <div class="border-bottom">
      <%= @customer.last_name_kana %>
      <%= @customer.first_name_kana %>
    </div>
      <% end %>
    <div class="border-bottom">
      <%= @customer.postal_code %>
    </div>
    <div class="border-bottom">
      <%= @customer.prefecture_name %>
      <%= @customer.city %>
    </div>
    <div class="border-bottom">
      <%= @customer.block %>
      <%= @customer.building_name %>
    </div>

    <div>
      <%= link_to "編集", edit_customer_path(@customer), class: 'btn-grad' %>
    </div>
  </div>
    <% if @orders.exists? %>
      <!--current_customerの注文履歴-->
      <%= render 'orders/orders_all' %>
    <% end %>
</div>