<div class="container my-5">
  <div class="row">
    <div class="col-10 mb-4">
      <h3 class="mb-3">会員情報編集</h3>

      <%= form_with model: @customer, class: 'flex', local: true do |f| %>
        <!--名前の列-->
        <div class="flex flex-column">
          <div>
            <%= f.text_field :last_name, autocomplete: "last_name", placeholder: '姓', class: 'form-control mb-2' %>
            <%= f.text_field :first_name, autocomplete: "first_name", placeholder: '名', class: 'form-control' %>
          </div>
          <!--名前フリガナの列-->
          <div>
            <%= f.text_field :last_name_kana, autocomplete: "last_name_kana", placeholder: 'セイ', class: 'form-control mb-2' %>
            <%= f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder: 'メイ', class: 'form-control' %>
          </div>
        </div>
        <!--郵便番号の列-->
        <div class="flex flex-column">
          <div>
            <%= f.text_field :postal_code, autocomplete: "postal_code", placeholder: '郵便番号', class: 'form-control' %>
          </div>
          <!--都道府県の列-->
          <div>
            <%= f.collection_select :prefecture_code,  JpPrefecture::Prefecture.all, :code, :name, { include_blank: false }, { class: 'form-select' } %>
          </div>
          <!--市区町村の列-->
          <div>
            <%= f.text_field :city, autocomplete: "city", placeholder: '市区町村', class: 'form-control' %>
          </div>
          <!--丁目・番地の列-->
          <div>
            <%= f.text_field :block, autocomplete: "block", placeholder: '丁目・番地', class: 'form-control' %>
          </div>
          <!--建物の列-->
          <div>
            <%= f.text_field :building_name, autocomplete: "building_name", placeholder: '建物名', class: 'form-control' %>
          </div>
          <!--メールアドレスの列-->
          <div>
            <%= f.email_field :email, autocomplete: "email", placeholder: 'メールアドレス', class: 'form-control' %>
          </div>
          <div>
            <%= f.submit "保存", class: 'btn-grad small-btn mb-4' %>
          </div>
        </div>
      <% end %>
    </div>

    <div>
      <%= link_to "戻る", :back, class: 'btn-grad' %>
    </div>
  </div>
</div>