<!--お知らせ一覧-->
<div class="news-box flex flex-column">
  <div class="card w-85">
    <div class="card-header p-2">
      <h3>お知らせ</h3>
    </div>
    <ul class="list-group list-group-flush">
      <% @posts.each do |post| %>
        <li class="list-group-item">
          <span class="fontweight-700"><%= post.created_at.strftime("%Y/%m/%d") %></span>
          <%= post.title %>
          <%= post.body %>
        </li>
      <% end %>
    </ul>
  </div>
    <!--お知らせ履歴一覧-->
    <div class="my-3 align-self-end">
      <% if @posts.exists? %>
        <%= link_to "お知らせ履歴", posts_path, class: 'btn-grad' if !current_page?(posts_path) %>
        <%= link_to "戻る", :back, class: 'btn-grad' if current_page?(posts_path) %>
      <% end %>
    </div>
</div>