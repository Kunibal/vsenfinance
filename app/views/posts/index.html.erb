<h2>お知らせ履歴一覧</h2>
<ul>
<% @posts.each do |post| %>
  <li>
    <%= post.created_at.strftime("%Y/%m/%d") %>
    <%= post.title %>
    <%= post.body %>
    <% if current_admin %>
      <%= link_to "編集", edit_post_path(post.id) %>
      <%= link_to "削除", post_path(post.id), method: :delete, data: { confirm: "本当に削除しますか。" } %>
    <% end %>
  </li>
<% end %>
</ul>

<%= link_to "戻る", :back %>