<header class="primary-header flex">
  <div>
    <%= image_tag("abbeybaby_wh.png", size: "50x50", class: "logo") %>
  </div>

  <button class="mobile-nav-toggle" aria-controls="primary-navigation" aria-expanded="false"></button>

  <nav>
    <% if current_admin %>
    <ul id="primary-navigation" data-visible="false" class="primary-navigation flex">
      <li>
        <%= link_to "Dashboard", dashboard_path, class: "#{'bold-text' if current_page?(dashboard_path)}" %>
      </li>
      <!--<li>-->
      <!--  <%# link_to "Home", root_path, class: "text-white #{'bold-text' if current_page?(root_path)}" %>-->
      <!--</li>-->
      <li>
        <%= link_to "会員一覧", customers_path, class: "#{'bold-text' if current_page?(customers_path)}" %>
      </li>
      <li>
        <%= link_to "商品一覧", items_path, class: "#{'bold-text' if current_page?(items_path)}" %>
      </li>
      <!--responsive対応：35emと45emの間にはIconを表示-->
      <li class="nav-icon">
        <%= link_to destroy_admin_session_path, method: :delete do %>
          <i class="fa-solid fa-right-from-bracket"></i>
        <% end %>
      <!--responsive対応：大きい画面では文字を表示-->
      </li>
      <li class="nav-text">
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
      </li>
    </ul>
    <% elsif current_customer %>
    <ul id="primary-navigation" data-visible="false" class="primary-navigation flex">
      <li>
        <%= link_to "Home", root_path, class: "#{'bold-text' if current_page?(root_path)}" %>
      </li>
      <li>
        <%= link_to "マイページ", customer_path(current_customer), class: "#{'bold-text' if current_page?(customer_path(current_customer))}" %>
      </li>
      <li>
        <%= link_to "商品一覧", items_path, class: "#{'bold-text' if current_page?(items_path)}" %>
      </li>
      <li>
        <%= link_to cart_path(@current_cart), class: "text-center #{'bold-text' if current_page?(cart_path(@current_cart))}" do %>
          <div class="round-bg fontweight-700"><%= @current_cart.order_items.sum(:quantity) %></div> <i class="fas fa-shopping-cart"></i>
        <% end %>
      </li>
      <!--responsive対応：35emと45emの間にはIconを表示-->
      <li class="nav-icon">
        <%= link_to destroy_admin_session_path, method: :delete do %>
          <i class="fa-solid fa-right-from-bracket"></i>
        <% end %>
      <!--responsive対応：大きい画面では文字を表示-->
      </li>
      <li class="nav-text">
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
      </li>
    </ul>
    <% else %>
    <ul id="primary-navigation" data-visible="false" class="primary-navigation flex">
      <li>
        <%= link_to "Home", root_path, class: "#{'bold-text' if current_page?(root_path)}" %>
      </li>
      <li>
        <%= link_to "商品一覧", items_path, class: "#{'bold-text' if current_page?(items_path)}" %>
      </li>
      <li>
        <%= link_to "ログイン", new_customer_session_path, class: "#{'bold-text' if current_page?(new_customer_session_path)}" %>
      </li>
      <li>
        <%= link_to "新規登録", new_customer_registration_path, class: "#{'bold-text' if current_page?(new_customer_registration_path)}" %>
      </li>
    </ul>
    <% end %>
  </nav>
</header>