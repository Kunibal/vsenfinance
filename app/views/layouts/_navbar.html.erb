<header class="primary-header flex">
  <div>
    <%= image_tag("abbeybaby_wh.png", size: "50x50", class: "logo") %>
  </div>

  <button class="mobile-nav-toggle" aria-controls="primary-navigation" aria-expanded="false"></button>

  <nav>
    <% if current_customer %>
    <ul id="primary-navigation" data-visible="false" class="primary-navigation flex">
      <li>
        <%= link_to "Home", root_path, class: "text-white" %>
      </li>
      <li>
        <%= link_to "MyPage", customer_path(current_customer), class: "text-white" %>
      </li>
      <li>
        <%= link_to "Products", items_path, class: "text-white" %>
      </li>
      <li>
        <%= link_to "Log out", destroy_customer_session_path, method: :delete, class: "text-white" %>
      </li>
    </ul>
    <% else %>
    <ul id="primary-navigation" data-visible="false" class="primary-navigation flex">
      <li>
        <%= link_to "Home", root_path, class: "text-white" %>
      </li>
      <li>
        <%= link_to "About", about_path, class: "text-white" %>
      </li>
      <li>
        <%= link_to "Log in", new_customer_session_path, class: "text-white" %>
      </li>
      <li>
        <%= link_to "Sign up", new_customer_registration_path, class: "text-white" %>
      </li>
    </ul>
    <% end %>
  </nav>
</header>