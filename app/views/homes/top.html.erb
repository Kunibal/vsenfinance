<%= render 'homes/slideshow' %>

<!--新着商品-->
<div class="flex flex-column align-items-center mt-4">
  <h1>新着商品</h1>
  <div class="new-arrivals flex">
    <% @items.each do |item| %>
      <div class="p-2">
        <%= link_to item_path(item) do %>
        <%= image_tag item.item_image.variant(resize_to_fill: [300, 300]) %>
        <% end %>
      <div class="card-body">
        <p class="fontsize-400">
          <span class="fontweight-700">商品名　</span>
          <%= item.name %>
        </p>
        <p class="fontsize-300">
          <span class="fontweight-700">税込価格　</span>
          <%= item.add_tax %>円<span>　<%= link_to "詳細", item_path(item), class: 'btn-grad small-btn' %></span>
        </p>
      </div>
      </div>
    <% end %>
  </div>
  <div class="item-link"><%= link_to "商品一覧", items_path, class: 'btn-grad' %></div>
</div>

