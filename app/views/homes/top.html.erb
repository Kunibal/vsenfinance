<%= render 'homes/slideshow' %>

<!--新着商品-->
<h2>新着商品</h2>
<div>
  <% @items.each do |item| %>
    <div>
      <%= link_to item_path(item) do %>
      <%= image_tag item.item_image.variant(resize_to_fill: [200, 200]) %>
      <% end %>
    </div>
    <div>
      商品名
      <%= item.name %>
    </div>
    <div>
      商品説明
      <%= item.description %>
    </div>
    <div>
      税込価格
      <%= item.add_tax.to_s(:delimited) %>
    </div>
  <% end %>
</div>