<%= form_with model: @order, url: confirm_order_path, method: :get do |f| %>

<!--select payment_method here-->

<%= f.radio_button :address, 1, checked: true %>
<%= f.label :address_1, 'ご住所の選択' %>
<%= current_customer.last_name + current_customer.first_name %>
<%= current_customer.postal_code.to_s + current_customer.prefecture_name + current_customer.city + current_customer.block %>
<% if !current_customer.building_name.empty? %>
  <%= current_customer.building_name %>
<% end %>

<%= f.submit %>
<% end %>