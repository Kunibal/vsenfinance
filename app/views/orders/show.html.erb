<%= @order.created_at.strftime('%Y/%m/%d') %>
<%= @order.customer_name %>
<%= @order.customer_address %>
<%= @order.order_price.to_s(:delimited) %>
<% @order.order_items.each do |item| %>
  <%= item.item.name %>
  <%= item.quantity %>
  <%= item.item.add_tax %>
  <%= item.subtotal.to_s(:delimited) %>
<% end %>

