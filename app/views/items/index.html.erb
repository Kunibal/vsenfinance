<div class="container">
  <!--新規登録へのリンク（admin専用）-->
  <% if current_admin %>
    <div class="mt-4">
      <%= link_to "商品新規登録", new_item_path, class: 'btn-grad p-2' %>
    </div>
  <% end %>
</div>
<!--商品一覧-->
<div class="container mt-5">
  <h2 class="offset-md-1">商品一覧</h2>
  <div class="col-10 m-auto flex flex-wrap">
    <% @items.each do |item| %>
      <div class="flex p-3">
        <%= link_to item_path(item) do %>
        <%= image_tag item.item_image.variant(resize_to_fill: [150, 150]) %>
        <% end %>
      <div>
        <p>
          <span class="fontweight-700"><%= item.name %></span>
        </p>
        <p>
          <span class="fontweight-700">税込価格　</span>
          <%= item.add_tax %>円
        </p>
        <span><%= link_to "詳細", item_path(item), class: 'btn-grad small-btn' %></span>
      </div>
      </div>
    <% end %>
  </div>
</div>
<div class="container my-4">
  <div class="col-10 flex justify-content-between m-auto">
    <%= link_to "HOMEへ戻る", root_path, class: 'btn-grad' %>
    <span>
      <%= link_to_prev_page @items, '前へ', class: 'btn-grad small-btn me-1' %>
      <%= link_to_next_page @items, '次へ', class: 'btn-grad small-btn ms-1' %>
    </span>
  </div>
</div>